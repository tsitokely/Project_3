<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout style="@style/LinearLayoutVerticalStyle">

        <ImageView
            style="@style/ImageViewStyle"
            android:contentDescription="@string/logo_description"
            android:src="@drawable/logo_quiz" />

        <TextView
            style="@style/TitleStyle"
            android:text="@string/quiz_name" />

        <TextView
            style="@style/QuestionTitleStyle"
            android:text="@string/question_one" />

        <LinearLayout style="@style/LinearLayoutVerticalStyle">

            <RadioGroup
                android:id="@+id/question_1_1_rg"
                style="@style/RadioGroupOnQuestionStyle">

                <RadioButton
                    android:id="@+id/question_1_answer_1_rb"
                    style="@style/RadioButtonStyle"
                    android:text="@string/question_one_one" />

                <RadioButton
                    android:id="@+id/question_1_answer_2_rb"
                    style="@style/RadioButtonStyle"
                    android:text="@string/question_one_two" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/question_1_2_rg"
                style="@style/RadioGroupOnQuestionStyle">

                <RadioButton
                    android:id="@+id/question_1_answer_3_rb"
                    style="@style/RadioButtonStyle"
                    android:text="@string/question_one_three" />

                <RadioButton
                    android:id="@+id/question_1_answer_4_rb"
                    style="@style/RadioButtonStyle"
                    android:text="@string/question_one_four" />
            </RadioGroup>


        </LinearLayout>

        <TextView
            style="@style/QuestionTitleStyle"
            android:text="@string/question_two" />

        <LinearLayout style="@style/LinearLayoutVerticalStyle">

            <RadioGroup
                android:id="@+id/question_2_1_rg"
                style="@style/RadioGroupOnQuestionStyle">

                <RadioButton
                    android:id="@+id/question_2_answer_1_rb"
                    style="@style/RadioButtonStyle"
                    android:text="@string/question_two_one" />

                <RadioButton
                    android:id="@+id/question_2_answer_2_rb"
                    style="@style/RadioButtonStyle"
                    android:text="@string/question_two_two" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/question_2_2_rg"
                style="@style/RadioGroupOnQuestionStyle">

                <RadioButton
                    android:id="@+id/question_2_answer_3_rb"
                    style="@style/RadioButtonStyle"
                    android:text="@string/question_two_three" />

                <RadioButton
                    android:id="@+id/question_2_answer_4_rb"
                    style="@style/RadioButtonStyle"
                    android:text="@string/question_two_four" />
            </RadioGroup>


        </LinearLayout>

        <TextView
            style="@style/QuestionTitleStyle"
            android:text="@string/question_three" />

        <LinearLayout style="@style/LinearLayoutVerticalStyle">

            <LinearLayout style="@style/LinearLayoutHorizontalStyle">

                <CheckBox
                    android:id="@+id/question_3_answer_1_cb"
                    style="@style/CheckBoxStyle"
                    android:text="@string/question_three_one" />

                <CheckBox
                    android:id="@+id/question_3_answer_2_cb"
                    style="@style/CheckBoxStyle"
                    android:text="@string/question_three_two" />
            </LinearLayout>

            <LinearLayout style="@style/LinearLayoutHorizontalStyle">

                <CheckBox
                    android:id="@+id/question_3_answer_3_cb"
                    style="@style/CheckBoxStyle"
                    android:text="@string/question_three_three" />

                <CheckBox
                    android:id="@+id/question_3_answer_4_cb"
                    style="@style/CheckBoxStyle"
                    android:text="@string/question_three_four" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            style="@style/QuestionTitleStyle"
            android:text="@string/question_four" />

        <EditText
            android:id="@+id/question_4_et"
            style="@style/EditTextStyle"
            android:hint="@string/hint"
            android:inputType="textCapWords" />

        <Button
            style="@style/ButtonStyle"
            android:onClick="getResults"
            android:text="@string/result" />
    </LinearLayout>
</ScrollView>